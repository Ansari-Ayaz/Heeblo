@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <!-- ========== Meta Tags ========== -->
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content="Stock Logistics: Powered by Matrixninjas" />
    <meta name="csrf-token" content="rZ3zX1dNEGz3R30Ek9IafBt5MJp31NkEnluQJfNR" />
    <!-- ========== Page Title ========== -->
    <title> Heeblo</title>
    <!-- ========== Favicon Icon ========== -->

    <link rel="shortcut icon" href="~/frontend-assets/pattern/assets/images/fav.png" type="image/x-icon" />
    <!-- Other css -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.css" />
    <link rel="stylesheet" href="~/frontend-assets/pattern/assets/css/animate.css" />
    <link rel="stylesheet" href="~/frontend-assets/pattern/assets/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/frontend-assets/pattern/assets/css/all.min.css">
    <link rel="stylesheet" href="~/frontend-assets/pattern/assets/css/icofont.min.css" />
    <link rel="stylesheet" href="~/frontend-assets/pattern/assets/css/swiper.min.css" />
    <link rel="stylesheet" href="~/frontend-assets/pattern/assets/css/style.css" />
    <link rel="stylesheet" href="~/frontend-assets/pattern/assets/css/rangeui.css" />


    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;700&display=swap" rel="stylesheet" />
    <!-- ========== End Stylesheet ========== -->
</head>
<body>


    <div class="main-wraper ">
        <div class="preloader">
            <div class="preloader-inner">
                <div class="preloader-icon">
                    <span></span>
                    <span></span>
                </div>
            </div>
        </div>
        <div class="content-main-wraper">

            <!-- Start Banner

               ============================================= -->
            <!-- ==========Banner Section Starts Here========== -->
            <div class="banner home-main">
                <div class="container">
                    <div class="top-logo">
                        <img src="~/frontend-assets\pattern\assets\images\heeblo-logo.png" alt="Logo" />
                    </div>
                    <div class="main-form-center">

                        <div class="row align-items-center g-4">
                            <div class="col-md-6 wow fadeInUp" data-wow-delay=".5s" style="visibility: visible; animation-delay: 0.5s; animation-name: fadeInUp;">
                                <div class="btn-login home-page">
                                    <img src="~/frontend-assets/pattern/assets/images/heeblo-logo.png" alt="Logo" />
                                    <p>Your hub for all things <span style="color:#d6c494"><b> talent</b></span></p>

                                    <button onclick="select_role(2)">I'm a Writer </button>


                                    <button onclick="select_role(3)" value="submit">I'm Hiring</button>

                                </div>

                            </div>

                            <div class="col-md-6 d-none d-md-block d-lg-block wow fadeInUp" data-wow-delay=".5s" style="visibility: visible; animation-delay: 0.5s; animation-name: fadeInUp;">
                                <div class="banner__content">

                                    <img src="~/frontend-assets/pattern/assets/images/writer.png" alt="" />
                                </div>

                            </div>

                        </div>
                    </div>
                </div>

                <div class="container-fluid bottom-info">

                    <div class="left-ft"><a href="mailto:admin@heeblo.com"><i class="fa-solid fa-envelope"></i>admin@heeblo.com</a></div>
                    <div class="right-ft">
                        <ul>
                            <li><a href="@Url.Action("termsandcondition","Auth")">Terms and Conditions </a></li>
                            <li><a href="@Url.Action("privacypolicy","Auth")">Privacy Policy</a></li>

                        </ul>
                    </div>

                </div>
            </div>

        </div>

        <!-- Start Footer
           ============================================= -->
        <footer class="footer">
            <div class="footer__top padding-tb">
                <div class="container-fluid">
                    <div class="row">

                        <div class="col-lg-3 col-sm-3 col-12">
                            <div class="logo wow fadeInUp" data-wow-delay=".5s">
                                <img src="~/frontend-assets/pattern/assets/images/logo-2.png" alt="Logo" />
                            </div>

                        </div>
                        <div class="col-lg-3 col-sm-3 col-12">
                            <div class="footer__body wow fadeInUp" data-wow-delay=".5s" style="visibility: visible; animation-delay: 0.5s;">
                                <h2> Menu</h2>
                                <ul>
                                    <li> <a href="#"> Home </a> </li>
                                    <li> <a href="#"> Login  </a> </li>
                                    <li><a href="#">  SignUp</a>  </li>

                                </ul>
                            </div>

                        </div>

                        <div class="col-lg-3 col-sm-3 col-12">
                            <div class="footer__body wow fadeInUp" data-wow-delay=".5s" style="visibility: visible; animation-delay: 0.5s;">
                                <h2> Important Links</h2>
                                <ul>
                                    <li><a href="@Url.Action("termsandcondition","Auth")">Terms and Conditions </a></li>
                            <li><a href="@Url.Action("privacypolicy","Auth")">Privacy Policy</a></li>


                                </ul>
                            </div>

                        </div>

                        <div class="col-lg-3 col-sm-3 col-12">
                            <div class="social-bottom wow fadeInUp" data-wow-delay=".5s" style="visibility: visible; animation-delay: 0.5s;">
                                <h2> Social Links</h2>
                                <ul>
                                    <li> <a href="#"> <i class="fa-brands fa-facebook-f"></i></a></li>
                                    <li> <a href="#"><i class="fa-brands fa-instagram"></i></a></li>
                                    <li> <a href="#"><i class="fa-brands fa-twitter"></i></a></li>
                                </ul>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
            <div class="footer__bottom wow fadeInUp" data-wow-delay=".5s">
                <div class="container-fluid">
                    <div class="row">
                        <p> © COPYRIGHT 2023 . ALL RIGHTS RESERVED.</p>
                    </div>
                </div>
            </div>

        </footer>



        <!-- ==========Footer Section Ends Here========== -->
        <!-- All Scripts -->
        <script src="~/frontend-assets/pattern/assets/js/jquery.js"></script>
        <script src="https://code.jquery.com/ui/1.13.2/jquery-ui.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.js"></script>
        <script src="~/frontend-assets/pattern/assets/js/bootstrap.bundle.min.js"></script>
        <script src="~/frontend-assets/pattern/assets/js/waypoints.min.js"></script>
        <script src="~/frontend-assets/pattern/assets/js/swiper.min.js"></script>
        <script src="~/frontend-assets/pattern/assets/js/wow.min.js"></script>
        <script src="~/frontend-assets/pattern/assets/js/lightcase.js"></script>
        <script src="~/frontend-assets/pattern/assets/js/isotope.pkgd.min.js"></script>
        <script src="~/frontend-assets/pattern/assets/js/functions.js"></script>
        <script>
                function select_role(r){
                    sessionStorage.setItem('role', r);
                window.location.href = "@Url.Action("LoginSignUp","Auth")"
            }
        </script>
    </div>
</body>
</html>
